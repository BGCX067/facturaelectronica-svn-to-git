        android:largeScreens="false"
        android:normalScreens="true"
        android:smallScreens="false" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/MicoDroid_ThemeLight">
        
        
        
        <activity
            android:name=".SplashLoader"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".FacturaMovilActivity"
            android:label="@string/app_name"
            >
        </activity>
        
        <activity
            android:name=".ContribuyenteActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".ImprimirActivity"
            android:label="@string/app_name"
             >
        </activity>
        <activity
            android:name=".FacturasActivity"
            android:label="@string/app_name"
            >
        </activity>
        <activity
            android:name=".ClientesActivity"
            android:label="@string/app_name"
            >
        </activity>
    </application>


    
</manifest>